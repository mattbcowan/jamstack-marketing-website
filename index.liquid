---
layout: layout.liquid
---

<div class="p-6 container mx-auto">
    <h2 class="text-6xl font-bold">Recent News</h2>
    <ul class="w-full mt-6 flex flex-wrap gap-6">
        {% for blog in contentfulBlogs %}
            <li class="w-full md:w-1/2 lg:w-1/3 flex flex-col mb-8">
                <a class="bg-white rounded-lg shadow-lg flex-1 flex flex-col overflow-hidden" href="{{blog.slug | url}}">
                    <div>
                        <div 
                            class="bg-cover aspect-w-16 aspect-h-9" 
                            style="background-image: url(https:{{blog.featureImage.fields.file.url}}"
                        ></div>
                        <div class="p-6 flex-1 flex flex-col justify-between">
                            <h3 class="font-bold text-3xl my-4">{{blog.title}}</h3>
                            <div>
                                {{blog.description}}
                            </div>
                        </div>
                    </div>
                </a>
            </li>
        {% endfor %}
    </ul>
</div>